model Specialist {
  ...tableBase
  ...specialistBase
  gender Gender
  yearsOfExperience Int? @db.SmallInt
  formatOfWork FormatOfWork
  placesOfWork PlaceOfWork[]
  treatmentTypes String[] @default([]) // ??? field for future (requirements not defined yet)
  therapies Therapy[]
  price Int @db.SmallInt @default(0) // ??? field for future (requirements not defined yet)
  isFreeReception Boolean
  description String @db.Text
  phone String? @db.VarChar(15)
  email String? @db.VarChar(64)
  website String? @db.Text
  workSchedule String? @db.VarChar(128)
  @@map("specialists")
}

